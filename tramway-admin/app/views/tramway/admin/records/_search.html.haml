- if searchable_model?(model_class)
  .col-md-6
    .search
      = form_tag search_path, method: :get do |f|
        .form-group.text
          .input-group
            = text_field_tag :search, params[:search], class: 'text form-control'
            .input-group-append
              = submit_tag t('helpers.actions.search'), class: 'btn btn-primary'
